{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Package VSIX (vsce package)",
			"type": "shell",
			"command": "npm run package",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"label": "Publish latest VSIX to VS Code Marketplace",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-NoProfile",
				"-Command",
				"$ErrorActionPreference = 'Stop'; $vsix = Get-ChildItem -Path '${workspaceFolder}' -Filter *.vsix -Recurse | Sort-Object LastWriteTime -Descending | Select-Object -First 1; if (-not $vsix) { Write-Error 'No .vsix file found. Run the \"Package VSIX\" task first.'; exit 1 }; if (-not $env:VSCE_PAT) { Write-Error 'Environment variable VSCE_PAT is not set. Create a Personal Access Token and set it before running this task.'; exit 1 }; Write-Host 'Publishing' $vsix.FullName; npx --yes vsce publish --packagePath \"$($vsix.FullName)\" --skip-duplicate | cat"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "compile",
			"group": "build",
			"problemMatcher": [
				"$tsc"
			],
			"label": "npm: compile"
		},
		{
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "npm: watch"
		},
		{
			"label": "npm: compile (ad-hoc)",
			"type": "shell",
			"command": "npm run compile",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "Compile and Reload Debugger",
			"type": "shell",
			"command": "npm run compile",
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Quick Reload",
			"type": "shell",
			"command": "npm run compile",
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "Compile and Auto-Reload",
			"dependsOn": ["npm: compile"],
			"dependsOrder": "sequence",
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent",
				"panel": "shared",
				"showReuseMessage": false
			},
			"type": "shell",
			"command": "echo",
			"args": [
				"âœ… Compiled! Now press Ctrl+Shift+F5 to restart debugger"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}